<%= form_with scope: :registration, url: registration_path, local: false, id: "new-registration", data: { controller: "new-registration", action: "ajax:success->new-registration#create ajax:error->new-registration#error" } do |form| %>
  <%= form.text_field :username, placeholder: "Username", required: true, autocapitalize: "none", "aria-controls" => "username-helper-text" %>

  <%= form.text_field :nickname, placeholder: "Security Key nickname", required: true %>
  <%= form.submit "Register using WebAuthn" %>
<% end %>
<%= link_to 'Sign in', new_session_path %>
